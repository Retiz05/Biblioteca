@using Biblioteca.Models
@{
    ViewBag.Title = "Gestión de Bibliotecas";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
    var bibliotecas = ViewBag.Biblioteca as List<Biblioteca>;
    var NoUsuario = ViewBag.NoUsuario;
}


<!-- Main Content -->
<div id="mainContent" class="main">
    <h1 class="h2 mt-3">Gestión de Bibliotecas</h1>

    <div class="d-flex justify-content-between mb-4 flex-wrap">
        <a href="/Administrador/CrearBiblioteca" class="btn btn-primary mb-2">
            <i class="fas fa-plus"></i> Nueva Biblioteca
        </a>

        <form method="get" action="/Administrador/Bibliotecas" class="input-group" style="width: 300px;">
            <input type="text" class="form-control" placeholder="Buscar biblioteca..." name="search">
            <button class="btn btn-outline-secondary" type="submit">
                <i class="fas fa-search"></i>
            </button>
        </form>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Administrador</th>
                    <th>Usuarios</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (bibliotecas == null || !bibliotecas.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center">No hay bibliotecas disponibles</td>
                    </tr>
                }
                else
                {
                    foreach (var biblioteca in bibliotecas)
                    {
                        <tr>
                            <td>@biblioteca.ID</td>
                            <td>@biblioteca.Nombre</td>
                            <td>@biblioteca.Administrador</td>
                            <td>
                                <span class="badge bg-primary rounded-pill">@NoUsuario</span>
                            </td>
                            <td>
                                <a href="/Administrador/EditarBiblioteca/@biblioteca.ID" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="/Administrador/EliminarBiblioteca/@biblioteca.ID" class="btn btn-sm btn-danger"
                                   onclick="return confirm('¿Estás seguro de eliminar esta biblioteca?');">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    @if (ViewBag.TotalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @if (ViewBag.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=@(ViewBag.CurrentPage - 1)" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                }

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" href="?page=@i">@i</a>
                    </li>
                }

                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=@(ViewBag.CurrentPage + 1)" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>


